@using TRKPortfolio.Web.ViewModels.Index.ViewModel
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row d-flex vh-100">
    <div class="col-lg-7 col-md-12 align-self-center">
        <div class="tagline">
            <h2>Hi,</h2>
            <h2>I am <span class="name">Toti</span></h2>
        </div>
        <h1>Full-stack developer and web designer</h1>
        <h3>Portfolio Web App v1.0</h3>
        <p class="col-lg-8 col-md-7 p-0">
            Front-end, back-end developer / UI and Ux designer, based in Bulgaria,
            providing web-based solutions for grown businesses and startup companies.
        </p>
        <div class="">
            <a class="btn col-lg-4 col-md-5" href="#">Contact me</a>
            <a class="" href="https://www.buymeacoffee.com/Toti" target="https://www.buymeacoffee.com/Toti">
                <img src="https://img.buymeacoffee.com/button-api/?text=Buy
                 me a coffee&emoji=&slug=Toti&button_colour=FFDD00&font_colour=000000&font_family=Cookie&outline_colour=000000&coffee_colour=ffffff">
            </a>
        </div>
    </div>
    <div class="col-lg-5 align-self-center">
        <img class="h-100" src="/Images/web-developer.svg" alt="Hi">
    </div>
</div>
<div id="testimonialCarousel" class="carousel slide table-hover row testimonials" data-ride="carousel">
    <div class="col-1">
        <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
    </div>
    <div class="carousel-inner col-10 row align-self-center">
        @if (Model.Testimonials != null)
        {
            int i = 0;
            @foreach (var item in Model.Testimonials.Reverse())
            {
                i++;
                var active = i == 1 ? "active" : "";
                <div class="col-8 offset-2 carousel-item @active">
                    <p id="testimonialContent" class="text-center">@item.Text</p>
                </div>
            }
        }
    </div>
    <div class="col-1">
        <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<h3 class="align-self-center text-center mt-5 mb-5">Projects</h3>
<div id="projectsCarousel" class="carousel slide table-hover row projects" data-ride="carousel">
    @*TODO Change arrow color*@
    <div class="col-1">
        <a class="carousel-control-prev" href="#projectsCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
    </div>
    <div class="carousel-inner col-10 row align-self-center">
        @if (Model.Projects != null && Model.Projects.Count() != 0)
        {
            int i = 0;
            @foreach (var project in Model.Projects.Reverse())
            {
                i++;
                var active = i == 1 ? "active" : "";
                <div class="carousel-item @active">
                    <div class="row">
                        <div class="col-6">
                            <img class="w-100" src="/Images/@Model.Projects.ElementAt(Model.Projects.Count()-i).Thumbnail" alt="Hi">
                        </div>
                        <div class="col-6">
                            <h4 class="col-12">@project.Title</h4>
                            <hr />
                            <h4 class="col-12">@project.Paragraphs.FirstOrDefault().ParagraphTitle</h4>
                            <p class="col-12">@project.Paragraphs.FirstOrDefault().ParagraphContent</p>
                            <div class="col-12 row">
                                <a class="btn col-5 m-auto d-block" asp-controller="Projects" asp-action="Detail" asp-route-id="@project.Id">View case study</a>
                                <a class="btn col-5 m-auto d-block" asp-controller="Projects" asp-action="Index">See all projects</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h1>ENTER SOME PROJECTS</h1>
        }
    </div>
    <div class="col-1">
        <a class="carousel-control-next" href="#projectsCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<h3 class="align-self-center text-center mt-5 mb-5">Posts</h3>
<div id="postsCarousel" class="carousel slide table-hover row projects" data-ride="carousel">
    @*TODO Change arrow color*@
    <div class="col-1">
        <a class="carousel-control-prev" href="#postsCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
    </div>
    <div class="carousel-inner col-10 row align-self-center">
        @if (Model.Posts != null && Model.Posts.Count() != 0)
        {
            int i = 0;
            @foreach (var post in Model.Posts.Reverse())
            {
                i++;
                var active = i == 1 ? "active" : "";
                <div class="carousel-item @active">
                    <div class="row">
                        <div class="col-6">
                            <h4 class="col-12">@post.Title</h4>
                            <hr />
                            <h4 class="col-12">@post.Paragraphs.FirstOrDefault().ParagraphTitle</h4>
                            <p class="col-12">@post.Description</p>
                            <div class="col-12 row">
                                <a class="btn col-5 m-auto d-block" asp-controller="Posts" asp-action="Detail" asp-route-id="@post.Id">Read post</a>
                                <a class="btn col-5 m-auto d-block" asp-controller="Posts" asp-action="Index">See all posts</a>
                            </div>
                        </div>
                        <div class="col-6">
                            <img class="w-100" src="/Images/@Model.Posts.ElementAt(Model.Posts.Count()-i).Thumbnail" alt="Hi">
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-6">
                        <h1>Enter Some posts</h1>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-1">
        <a class="carousel-control-next" href="#postsCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
