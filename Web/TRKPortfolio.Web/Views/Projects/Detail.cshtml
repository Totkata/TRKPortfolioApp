@using System.Globalization
@using TRKPortfolio.Web.ViewModels.Projects.ViewModel
@model ProjectAttatchmentListViewModel


<div class="row d-flex pt-5">
    <div class="col-6 offset-3 mt-5">
        @if (Model.Project.CustomerUsername == User.Identity.Name)
        {
            <a class="btn col-6 offset-3 mb-3" asp-area="" asp-controller="Projects" asp-action="Create" asp-route-id="@Model.Project.Id">Add Testimonial</a>
        }
        @if (User.IsInRole("Admin"))
        {
            <a class="btn col-6 offset-3 mb-3" asp-area="Administration" asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.Project.Id">Edit Project</a>
            <a id="danger" class="btn col-6 offset-3 mb-3" asp-area="Administration" asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.Project.Id">Delete Project</a>
        }
    </div>
    <div class="col-6 offset-3 mt-5 align-self-center">
        <h3>@Model.Project.Title</h3>
        <p>@Model.Project.Description</p>
    </div>
    <img class="col-6 offset-3" src="/Images/@Model.Project.Thumbnail" alt="Alternate Text" />
    @foreach (var paragraph in Model.Project.Paragraphs)
    {
        <div class="col-6 offset-3 mt-5 align-self-center">
            <h2 class="mt-5">@paragraph.ParagraphTitle</h2>
            <p>@paragraph.ParagraphContent</p>
            <img class="col-12 p-0" src="/Images/@paragraph.ParagraphPath" alt="Alternate Text" />
        </div>
    }
</div>