@using System.Globalization
@using TRKPortfolio.Web.ViewModels.Administration.Posts.InputModel
@model CreatePostInputModel

@{
    this.ViewData["Title"] = "Create Category";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="row d-flex">
    <div class="col-md-6 offset-3 mt-5 align-self-center">
        <form enctype="multipart/form-data" asp-area="Administration" asp-controller="Posts" asp-action="Create" method="post">
            <h3 class="mb-3 text-center">Input your new Post</h3>
            <div class="form-group">
                <label>Post Title</label>
                <input id="customeInput" asp-for="@Model.Title" class="form-control" placeholder="Post Title">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Describtion</label>
                <input id="customeInput" asp-for="@Model.Description" class="form-control" placeholder="Description">
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div id="ParagraphsContainer">
                <label asp-for="Paragraphs"></label>
                <input id="customeInput" type='text' name="Paragraphs[0].Title" class="form-control" placeholder="Title">
                <textarea cols="40" rows="5" id="customeInput" type="text" name="Paragraphs[0].Content" class="form-control h-100 mt-2 mb-4" placeholder="Content"></textarea>
                <span asp-validation-for="@Model.Paragraphs" class="text-danger"></span>
            </div>
            <div>
                <a class="btn col-12 mb-4" onclick="AddParagraph()">Add new Paragraph</a>
            </div>
            <div class="form-group">
                <h5>Hold Ctrl to select multiple categories</h5>
                <select asp-for="CategoryId" class="form-control" asp-items="categoryItems" multiple></select>
            </div>
            <div class="form-group">
                <label asp-for="Attatchments"></label>
                <input id="customeInput" asp-for="Attatchments" class="form-control" multiple />
                <span asp-validation-for="Attatchments" class="text-danger"></span>
            </div>
            <a class="btn col-12" onclick="this.closest('form').submit();return false;">Create Post</a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var paragraphIndex = 1;
        function AddParagraph() {
            $("#ParagraphsContainer").
                append("<div>",
                    "<input id='customeInput' type='text' name='Paragraphs[" + paragraphIndex + "].Title' class='form-control' placeholder='Title'>",
                    "<textarea cols='40' rows='5' id='customeInput' type='text' name='Paragraphs[" + paragraphIndex + "].Content' class='form-control h-100 mt-2 mb-4' placeholder='Content'></textarea>",
                    "</div>");
            paragraphIndex++;
        }
    </script>
}